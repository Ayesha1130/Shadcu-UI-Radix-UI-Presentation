{
  
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    // Custom rules
    "react/no-unescaped-entities": "warn", // Unescaped entities par warning
    "@typescript-eslint/no-unused-vars": "warn", // Unused variables par warning
    "react/jsx-uses-react": "off", // React 17+ ke liye zaroorat nahi
    "react/react-in-jsx-scope": "off" // React 17+ ke liye zaroorat nahi
  },
  "settings": {
    "react": {
      "version": "detect" // React version ko automatically detect karega
    }
  }
}